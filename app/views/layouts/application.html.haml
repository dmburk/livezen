!!!5
%html
  %head
    %title Livezen
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = csrf_meta_tags

  %body
    .topbar
      .topbar-inner
        .container
          = link_to "LiveZen", root_path, :class => "brand"
          %ul.nav
            %li.active Test
          
          %p.pull-right
            - if current_user
              = "#{current_user.email} - "
              = link_to "Logout", logout_path
            - else
              = link_to "Login", login_path

    .content
      = render 'layouts/notice'
      = yield