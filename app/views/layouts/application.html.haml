!!!5
%html
  %head
    %title Livezens
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = csrf_meta_tags

  %body
    .topbar
      .topbar-inner
        .container
          = link_to "LiveZen", root_path, :class => "brand"
          %ul.nav
            %li= link_to "Listable", lists_path
            // Can use li.active for the active app.
          
          %p.pull-right
            - if current_user
              = link_to current_user.email, profile_path
              = " - "
              = link_to "Logout", logout_path
            - else
              = link_to "Login", login_path

    .content
      =render :partial => "shared/flash_messages", :locals => {:flash => flash}
      = yield